<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" scaleShape="false" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="209.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../icons/LOGO.png" />
         </image>
      </ImageView>
      <Text fx:id="text_username" layoutX="228.0" layoutY="180.0" strokeType="OUTSIDE" strokeWidth="0.0" text="%login">
         <font>
            <Font name="Calibri Bold" size="18.0" />
         </font>
      </Text>
      <TextField fx:id="textField_username" layoutX="225.0" layoutY="184.0" />
      <Text fx:id="text_password" layoutX="225.0" layoutY="242.0" strokeType="OUTSIDE" strokeWidth="0.0" text="%password">
         <font>
            <Font name="Calibri Bold" size="18.0" />
         </font>
      </Text>
      <PasswordField fx:id="passwordField_password" layoutX="226.0" layoutY="247.0" />
      <Button fx:id="button_login" layoutX="247.0" layoutY="296.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="%sign_in">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
