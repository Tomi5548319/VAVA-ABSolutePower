<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../icons/LOGO.png" />
         </image>
      </ImageView>
      <Button fx:id="button_register" layoutX="374.0" layoutY="244.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="%register">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="button_login" layoutX="110.0" layoutY="244.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="%login">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <Text fx:id="text_welcome" layoutX="161.0" layoutY="194.0" strokeType="OUTSIDE" strokeWidth="0.0" text="%welcome">
         <font>
            <Font name="Calibri Bold" size="24.0" />
         </font>
      </Text>
   </children>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</AnchorPane>
